FROM golang:1.22

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем go.mod и go.sum файлы в рабочую директорию
COPY go.mod go.sum ./

# Загружаем зависимости
RUN go mod download

# Копируем исходные файлы проекта в рабочую директорию
COPY . .

# Сборка проекта
RUN make build

# Указываем команду по умолчанию при запуске контейнера
CMD ["./merger"]
